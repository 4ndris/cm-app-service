{
  "consumer": {
    "name": "ShowConsumer"
  },
  "interactions": [
    {
      "description": "retrieve specific show",
      "providerStates": [
        {
          "name": "initial state"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/services/shows/tt8712204"
      },
      "response": {
        "body": {
          "AbstractDesc": "Sample abstract",
          "AgeRating": 100,
          "AvailabilityFromUtcIso": "2000-01-31T13:00:00Z",
          "BackgroundUrl": "string",
          "Cast": "string",
          "Category": "MOVIE",
          "Director": "string",
          "EditedAbstract": "Sample edited absract",
          "Genre": "string",
          "Id": "string",
          "Name": "Batwoman",
          "ProductionYear": 100,
          "Seasons": 100
        },
        "generators": {
          "body": {
            "$.AgeRating": {
              "max": 2147483647,
              "min": 0,
              "type": "RandomInt"
            },
            "$.AvailabilityFromUtcIso": {
              "format": "yyyy-MM-dd'T'HH:mm:ssXXX",
              "type": "DateTime"
            },
            "$.BackgroundUrl": {
              "size": 20,
              "type": "RandomString"
            },
            "$.Cast": {
              "size": 20,
              "type": "RandomString"
            },
            "$.Category": {
              "regex": "MOVIE|SERIES",
              "type": "Regex"
            },
            "$.Director": {
              "size": 20,
              "type": "RandomString"
            },
            "$.Genre": {
              "size": 20,
              "type": "RandomString"
            },
            "$.Id": {
              "size": 20,
              "type": "RandomString"
            },
            "$.ProductionYear": {
              "max": 2147483647,
              "min": 0,
              "type": "RandomInt"
            },
            "$.Seasons": {
              "max": 2147483647,
              "min": 0,
              "type": "RandomInt"
            }
          }
        },
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "matchingRules": {
          "body": {
            "$.AbstractDesc": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.AgeRating": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "number"
                }
              ]
            },
            "$.AvailabilityFromUtcIso": {
              "combine": "AND",
              "matchers": [
                {
                  "format": "yyyy-MM-dd'T'HH:mm:ssXXX",
                  "match": "timestamp"
                }
              ]
            },
            "$.BackgroundUrl": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.Cast": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.Category": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "MOVIE|SERIES"
                }
              ]
            },
            "$.Director": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.EditedAbstract": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.Genre": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.Id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.Name": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.ProductionYear": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "number"
                }
              ]
            },
            "$.Seasons": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "number"
                }
              ]
            }
          },
          "header": {
            "Content-Type": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ]
            }
          }
        },
        "status": 200
      }
    },
    {
      "description": "retrieve specific show",
      "providerStates": [
        {
          "name": "show not exist"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/services/shows/tt8712205"
      },
      "response": {
        "status": 404
      }
    }
  ],
  "metadata": {
    "pact-jvm": {
      "version": "4.6.3"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "ShowProvider"
  }
}
